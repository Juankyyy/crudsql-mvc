@{
    ViewBag.Title = "Usuarios";
    ViewBag.Favicon = "usuarios.svg";
}

<div class="container">
    <h2>Usuarios</h2>

    <table class="table table-dark table-striped table-hover">
        <tr>
            <td>ID</td>
            <td>Nombres</td>
            <td>Apellidos</td>
            <td>Correo</td>
            <td>Acciones</td>
        </tr>

        @foreach (var user in Model) {
            <tr>
                <td>@user.Id</td>
                <td>@user.Names</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-controller="Users" asp-action="Details">Detalles</a> @* asp-route-id="@user.Id" *@
                    <a class="btn btn-sm btn-warning" asp-area="" asp-controller="Users" asp-action="Edit">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Users" asp-action="Delete">Eliminar</a>
                </td>
            </tr>
        }
    </table>
</div>